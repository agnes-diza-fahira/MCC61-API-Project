                                <option value="1">Female</option>
                            </select>
                            <label for="university">University</label>
                            <select required id="universityUpdate" class="form-control">
                            </select>
                            <label for="degree">Degree</label>
                            <select required id="degreeUpdate" class="form-control">
                                <option value="">Select:</option>
                                <option value="D1">D1</option>
                                <option value="D2">D2</option>
                                <option value="D3">D3</option>
                                <option value="D4">D4</option>
                                <option value="S1">S1</option>
                                <option value="S2">S2</option>
                                <option value="S3">S3</option>
                            </select>
                            <label for="gpa">GPA</label>
                            <input required type="text" id="gpaUpdate" class="form-control" pattern="^(?:4(?:\.0)?|[0-3](?:\.[0-99])?|0?\.[1-99])$" title="" />
                        </section>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="submitUpdate" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


                                <label for="firstName">First Name</label>
                                <input value="" required type="text" id="firstNameUpdate" class="form-control" pattern="^[A-Za-z]+$" />
                            </div>
                            <div class="col mr-1">
                                <label for="lastName">Last Name</label>

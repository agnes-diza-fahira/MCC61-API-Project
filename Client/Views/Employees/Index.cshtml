
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="pembungkus">
    <h1>Employee Data</h1>
    <button data-toggle="modal" data-target="#modalRegister" class="btn btn-outline-primary fa fa-plus mb-2" onclick="FormAdd()"> Add Data</button>
    <table id="tPoke" class="table table-hover text-center">
        <thead id="thPoke" class="font-weight-bold">
            <tr>
                <td>No</td>
                <td>NIK</td>
                <td>Nama</td>
                <td class="">Phone Number</td>
                <td>Email</td>
                <td class="">Birth Date</td>
                <td>Salary</td>
                <td>Gender</td>
                <td>Degree</td>
                <td>University</td>
                <td>Role</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody class="tablePoke">
            <tr>
                <td class="textEmployee"></td>
            </tr>
        </tbody>
    </table>

</div>

<!-- Modal Add Employee Data -->
<div class="modal fade" id="modalRegister" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered col-md-4" role="document">
        <div id="pokeContent" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Add Employee Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formEmployee">
                <div class="modal-body">
                    <div class="form-group">
                        <section id="a" class="row">
                            <div class="col">
                                <label for="firstName">First Name</label>
                                <input required type="text" id="firstName" class="form-control" pattern="^[A-Za-z]+$" />
                            </div>
                            <div class="col mr-1">
                                <label for="lastName">Last Name</label>
                                <input required type="text" id="lastName" class="form-control" pattern="^[A-Za-z]+$" />
                            </div>
                        </section>
                        <section id="b" class="row">
                            <label for="email">Email</label>
                            <input required type="email" id="email" class="form-control" placeholder="name@example.com" />
                            <label for="passWord">Password</label>
                            <input required type="password" id="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" />
                            <label for="phoneNumber">Phone Number</label>
                            <input required type="text" id="phone" class="form-control" pattern="^\d+$" />
                            <label for="birthDate">Birth Date</label>
                            <input required type="date" id="birthDate" class="form-control" />
                            <label for="salary">Salary</label>
                            <input required type="number" id="salary" class="form-control" min="5000" max="10000000" title="value must between 5000-10000000" />
                            <label for="gender">Gender</label>
                            <select required id="gender" class="form-control">
                                <option>Select:</option>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                            </select>
                            <label for="university">University</label>
                            <select required id="university" class="form-control">
                            </select>
                            <label for="degree">Degree</label>
                            <select required id="degree" class="form-control">
                                <option>Select:</option>
                                <option>D1</option>
                                <option>D2</option>
                                <option>D3</option>
                                <option>D4</option>
                                <option>S1</option>
                                <option>S2</option>
                                <option>S3</option>
                            </select>
                            <label for="gpa">GPA</label>
                            <input required type="text" id="gpa" class="form-control" pattern="^(?:4(?:\.0)?|[0-3](?:\.[0-99])?|0?\.[1-99])$" title="" />
                        </section>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="submitData" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal Update -->

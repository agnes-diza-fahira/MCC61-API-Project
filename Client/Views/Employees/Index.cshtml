                            <label for="phoneNumber">Phone Number</label>
                            <input required type="text" id="phoneUpdate" class="form-control" pattern="^\d+$" />
                            <label for="birthDate">Birth Date</label>
                            <input required type="date" id="birthDateUpdate" class="form-control" />
                            <label for="salary">Salary</label>
                            <input required type="number" id="salaryUpdate" class="form-control" min="5000" max="10000000" title="value must between 5000-10000000" />
                            <label for="gender">Gender</label>
